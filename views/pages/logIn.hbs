<div class='login-box'>
    <div class='navbar-column'>
        <a href='/' title='Go Home'>Inicio</a>
    </div>
    <form method='post' action='/api/auth/login'>
        <h2>Iniciar sesión</h2>
        <img
            src='https://cdn.onlinewebfonts.com/svg/img_90902.png'
            class='arrow'
            alt=''
        />
        <input placeholder='Email' name='username' required='true' />
        <div class='password-row'>
            <input
                placeholder='Password'
                name='password'
                required='true'
                type='password'
                id='password'
            />
            <button class='btn' type='button' onclick='mostrarContrasena()'><img
                    src='https://img.icons8.com/pastel-glyph/256/surprise--v2.png'
                    alt='eye'
                    class='eye'
                /></button>

        </div>
        <button class='log-button m-2' type='submit'>Iniciar sesión</button>
    </form>
</div>
<div class='navbar-column'>
    <a href='/api/auth/signup' title='Signup '>Crear usuario</a>
</div>

<script>
    function mostrarContrasena() { var tipo =
    document.getElementById("password"); if (tipo.type == "password") {
    tipo.type = "text"; } else { tipo.type = "password"; } }
</script>