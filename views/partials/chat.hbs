<!-- Chat -->

<div
    class='offcanvas offcanvas-bottom chat-canvas'
    tabindex='-1'
    id='offcanvasBottom'
    aria-labelledby='offcanvasBottomLabel'
>
    <div class='offcanvas-header'>
        <h5 class='offcanvas-title' id='offcanvasBottomLabel'>Chat</h5>
        <button
            type='button'
            class='btn-close text-reset'
            data-bs-dismiss='offcanvas'
            aria-label='Close'
        ></button>
    </div>
    <div id='windowChat' class='offcanvas-body small'>
        <div class='chat-wrapper'>
            <ul id='messages'></ul>
            <form id='form' action=''>
                <input id='input' name='message' autocomplete='off' />
                <button>
                    <img
                        src='https://img.icons8.com/ios/256/send.png'
                        class='send-icon'
                        alt=''
                    />
                </button>
            </form>
        </div>
    </div>
</div>